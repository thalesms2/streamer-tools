generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Streamer {
  id Int @id @default(autoincrement())
  userName String @unique
  commands Commands[]
  socials Social[]
  secret String
}

model Commands {
  id Int @id @default(autoincrement())
  streamerId Int
  streamer Streamer @relation(fields: [streamerId], references: [id])
  command String
}

model Social {
  id Int @id @default(autoincrement())
  streamerId Int
  streamer Streamer @relation(fields: [streamerId], references: [id])
  title String
  link String
}